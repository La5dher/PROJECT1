{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Reseaux_sociaux</th>
                <th>Telephone</th>
                <th>Fixe</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.reseauxSociaux ? user.reseauxSociaux|join(', ') : '' }}</td>
                <td>{{ user.telephone ? user.telephone|join(', ') : '' }}</td>
                <td>{{ user.fixe ? user.fixe|join(', ') : '' }}</td>
                <td>{{ user.adresse ? user.adresse|join(', ') : '' }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.prenom }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
